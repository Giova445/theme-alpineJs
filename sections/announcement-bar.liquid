{% for block in section.blocks %}
  <div class="{{ section.settings.text_align }}" style="background-color: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }}">
    {{ block.settings.text }}
  </div>
{% endfor %}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "text_align",
      "label": "label",
      "options": [
        {
          "value": "text-left",
          "label": "text Left"
        },
        {
          "value": "text-center",
          "label": "text Center"
        },
        {
          "value": "text-right",
          "label": "text Right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
         "type": "color",
         "id": "bg_color",
         "label": "Background color",
         "default": "#fff"
        },
        {
         "type": "color",
         "id": "text_color",
         "label": "color",
         "default": "#000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
